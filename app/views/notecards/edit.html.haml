.container-fluid.container-fluid-main
  .row
    .col-md-2
      %ul.nav.nav-pills.nav-stacked.margin-left
        %li.active{:role => "presentation"}
          = link_to "Home", notecards_path
        .text-center.margin-top
          %strong
            = "Downloads"
        %li.active{:role => "presentation"}
          = link_to "txt", notecard_download_path(notecard_id: @notecard.id, file_type: "txt")
        %li.active{:role => "presentation"}
          = link_to "html", notecard_download_path(notecard_id: @notecard.id, file_type: "html")
      = form_tag({action: :upload}, multipart: true) do
        = file_field_tag 'my_clippings'
        = submit_tag
    .col-md-8
      = render partial: 'form', locals: {notecard: @notecard}
