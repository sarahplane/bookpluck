.container-fluid.container-fluid-main
  .row
    .col-md-2
      %ul.nav.nav-pills.nav-stacked.margin-left
        %li.active{:role => "presentation"}
          = link_to "Home", notecards_path
        .text-center.margin-top
          %strong
            = "Downloads"
        %li.active{:role => "presentation"}
          = link_to "txt", notecards_downloads_path(notecard_id: @notecard.id, format: "text"), method: :post
        %li.active{:role => "presentation"}
          = link_to "html", notecards_downloads_path(notecard_id: @notecard.id, format: "html"), method: :post
    .col-md-8
      = render partial: 'form', locals: {notecard: @notecard}
